#include <fstream.hfa>
#include <coroutine.hfa>

struct Raii {
	const char * name;
};

void ?{}( Raii & this, const char * name ) {
	this.name = name;
	sout | "Raii Ctor" | this.name;
}

void ^?{}( Raii & this ) {
	sout | "Raii Dtor" | this.name;
}

coroutine Cor {};

void ?{}( Cor & this ) {
	sout | "Coroutine Ctor";
}

void main( Cor & this ) {
	Raii raii = { "Coroutine" };
	sout | "Before Suspend";
	suspend;
	sout | "After Suspend";
}

void ^?{}( Cor & this ) {
	sout | "Coroutine Dtor";
}

int main() {
	Raii raii = { "Main" };
	Cor cor;
	resume(cor);
}


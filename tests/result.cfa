#include <assert.h>
#include <collections/result.hfa>

void checkPredicates() {
	result(int, char) pass = {1, 4};
	assert(pass);
	assert(has_value(&pass));

	result(int, char) fail = {0, '!'};
	assert((fail ? false : true));
	assert(!has_value(&fail));
}


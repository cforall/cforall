// Test increment and decrement operation:
#include <assert.h>

enum() Number { One, Two, Three };

int main() {
	Number a = One;

	assert( Two == ++a );
	assert( Two == a );

	assert( Two == a++ );
	assert( Three == a );

	assert( Two == --a );
	assert( Two == a );

	assert( Two == a-- );
	assert( One == a );

	printf( "done!\n" );
}

#include <assert.h>
#include <collections/maybe.hfa>

void checkPredicates() {
	maybe(int) filled = 4;
	assert(filled);
	assert(has_value(&filled));

	maybe(int) empty = {};
	assert(empty ? false : true);
	assert(!has_value(&empty));
}

void checkGetter() {
	maybe(int) a = 94;
	assert(94 == get(&a));
}


void checkSetters() {
	maybe(int) fee = 3;
	assert(3 == get(&fee));
	set(&fee, 7);
	assert(7 == get(&fee));
	set_none(&fee);
	assert(!has_value(&fee));

	maybe(int) fy = 4;
	maybe(int) foe = 8;
	maybe(int) fum = {};
	fy = foe;
	assert(8 == get(&fy));
	fy = fum;
	assert(!has_value(&fy));
}

int main(int argc, char * argv[]) {
	checkPredicates();
	checkGetter();
	//checkNamedConstructors();
	checkSetters();
	printf( "done\n" );				// non-empty .expect file
}
